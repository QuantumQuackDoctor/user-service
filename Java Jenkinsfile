pipeline {
    agent any
    tools{
        maven "Maven"
    }
    environment {
        AWS_REGION='us-east-2'
    }
    stages {
        stage('test') {
            steps {
                sh "mvn clean test"
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "mvn sonar:sonar"    
                }    
            }    
        }
        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline= true
            }   
        }
        stage('Build') {
            steps {
                sh "mvn clean package -Dmaven.test.skip"
            }
        }
    }
}